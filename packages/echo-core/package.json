{
  "name": "@echo/core",
  "version": "0.0.0",
  "description": "Echo core: deterministic ECS, scheduler, and timeline runtime.",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
